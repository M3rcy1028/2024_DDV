<!-- 상단바 -->

<nav class="header d-flex justify-content-end align-items-center">
    <a href="/roots/notificationList" class="link p-2">공지사항</a>
    <% if (!rootLogin && !usrLogin) { %> <!--로그인 안 됨-->
        <a href="/joinForm" class="link p-2">회원가입</a>
        <a href="/login" class="link p-2">로그인</a>
    <% } %>
    <% if (rootLogin || usrLogin) { %> <!--로그인 됨-->
        <a href="/logout" class="link p-2">로그아웃</a>
    <% } %>
</nav>

<nav class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <a href="/" id="home" class="me-auto p-2">
            <img src="/images/design/weblogo.png" alt="로고" style="height: 100px;  width: 200px">
        </a>
    </div>

    <!-- 검색 창 -->
    <div class="search-box d-flex align-items-center">
        <form action="/sellBoard/search" method="post" class="d-flex w-100 justify-content-between">
            <input class="search-txt" name="searchword" id="searchword" type="text" placeholder="상품명 입력" />
            <button class="search-btn" type="submit">
                <i class="bi bi-search"></i>
            </button>
        </form>
    </div>

    <% if (usrLogin) { %> <!--유저 로그인 됨-->
    <div class="header">
        <a href="/sellBoard/sellWrite" class="link p-2">판매하기</a>
        <a href="/myPage" class="link p-2">마이페이지</a>
        <a href="/message" class="link p-2">메세지</a>
    </div>
    <% } else if (rootLogin) { %> <!--관리자 로그인 됨-->
    <nav class="header">
        <a href="/roots/manageUsrList" class="link p-2">회원관리</a>
        <a href="/roots/manageBoardList" class="link p-2">게시판관리</a>
        <a href="/roots/manageAnalytics" class="link p-2">사이트분석</a>
    </nav>
    <% } else { %> <!-- 로그인 안됨-->
        <div class="header" style="visibility: hidden;">
            <a href="/sellBoard/sellWrite" class="link p-2">판매하기</a>
            <a href="/myPage" class="link p-2">마이페이지</a>
            <a href="/message" class="link p-2">메세지</a>
        </div>
    <% } %>
</nav>

<hr> <!-- 구분선 -->

<div class="menu-bar d-flex">
    <div class="dropdown me-2">
        <a class="btn btn-dark dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
            aria-expanded="false">
            카테고리
        </a>

        <ul class="dropdown-menu">
            <% for(var category in categories){ %>
                <li><a class="dropdown-item" href="/sellBoard/sellList/category/<%=categories[category]%>">
                        <%= category %>
                    </a></li>
                <% }%>
        </ul>
    </div>
    <a href="/sellBoard/sellList" , class="link p-2">전체 보기</a>
</div>

<hr> <!-- 구분선 -->