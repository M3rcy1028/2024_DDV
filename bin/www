#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('dbproject:server');
var http = require('http');
var { Server } = require("socket.io")

const mysql = require('mysql2');
const dotenv = require('dotenv');
dotenv.config();


const db = mysql.createPool({
  host: process.env.DB_HOST,
  user: process.env.DB_USER,
  password: process.env.DB_PASSWORD,
  database: process.env.DB_NAME,
  waitForConnections: true,
  connectionLimit: 10,
});




/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);
const io = new Server(server);
/**
 * Listen on provided port, on all network interfaces.
 */
server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

io.on('connection', (socket) => {
  console.log(socket.id, "connected")
  const userId = socket.handshake.auth.usrid;

  console.log(userId)
  // 채팅방 가져오기 (sid 또는 rid와 일치하는 채팅방)
  const query = `SELECT * FROM chatroom WHERE sid = ? OR rid = ?`;
  db.query(query, [userId, userId], async (err, results) => {
    if (err) {
      console.error('쿼리 오류:', err);
      return res.status(500).send('서버 오류');
    }

    // // Promise 배열 생성
    // const promises = results.map((result) => {
    //   return new Promise((resolve, reject) => {
    //     // 마지막 채팅기록
    //     db.query('SELECT Message FROM msglog WHERE Cnum = ? ORDER BY Mtime DESC LIMIT 1', [result.Cno], (_err, msg) => {
    //       result["Lastmsg"] = msg.length > 0 ? msg[0].Message : '메시지 없음';
    //     })

    //     if (userId === result.Sid) {
    //       // Rid로 프로필 가져오기
    //       db.query(`SELECT ProfileImg FROM usr WHERE uid = ?`, [result.Rid], (err, img) => {
    //         if (err) return reject(err);
    //         result['Image'] = img.length > 0 ? img[0].ProfileImg : null;
    //         resolve();
    //       });
    //     } else {
    //       // Sid로 가져오기
    //       db.query(`SELECT ProfileImg FROM usr WHERE uid = ?`, [result.Sid], (err, img) => {
    //         if (err) return reject(err);
    //         result['Image'] = img.length > 0 ? img[0].ProfileImg : null;
    //         resolve();
    //       });
    //     }
    //   });
    // });
    const promises = results.map((result) => {
      return new Promise((resolve, reject) => {
        // 마지막 채팅 기록 가져오기
        db.query('SELECT Message FROM msglog WHERE Cnum = ? ORDER BY Mtime DESC LIMIT 1', [result.Cno], (_err, msg) => {
          if (_err) {
            result["Lastmsg"] = '오류 발생';
            return reject(_err);
          }
          result["Lastmsg"] = Array.isArray(msg) && msg.length > 0 ? msg[0].Message : '메시지 없음';

          const profileQuery = userId === result.Sid
            ? 'SELECT ProfileImg FROM usr WHERE uid = ?'
            : 'SELECT ProfileImg FROM usr WHERE uid = ?';

          const userIdParam = userId === result.Sid ? result.Rid : result.Sid;

          // 프로필 이미지 가져오기
          db.query(profileQuery, [userIdParam], (err, img) => {
            if (err) {
              result["Image"] = null;
              return reject(err);
            }
            result['Image'] = img.length > 0 ? img[0].ProfileImg : null;
            resolve(); // 모든 작업 완료 후 resolve 호출
          });
        });
      });
    });


    // 모든 Promise가 완료될 때까지 대기
    try {
      await Promise.all(promises);
      console.log(results);
      socket.emit('load_chatrooms', results);
    } catch (err) {
      console.error('프로필 이미지 가져오기 오류:', err);
      res.status(500).send('서버 오류');
    }
  });

  // 왼쪽 채팅방 클릭 시, 오른쪽에 채팅방 로그 불러오기
  socket.on('load_chatlog', (cno) => {
    if (socket.rooms.size === 2) {
      socket.leave(roomId)
    }
    // 채팅방 Join
    socket.join(cno)
    roomId = cno;

    // DB에서 로그 불러오기
    db.query('SELECT Message, Sender FROM MSGLOG WHERE Cnum = ?',
      [cno],
      (_err, msgs) => {
        db.query("SELECT Rid, Sid, Bnum FROM chatroom WHERE Cno=?", [cno], (_err, ids) => {
          socket.emit('load_chatlog', msgs, ids[0].Rid, ids[0].Sid, ids[0].Bnum);
        });
      });
  })

  // 채팅 전송 시, DB에 로그 저장하기
  socket.on('chat_message', (data) => {
    console.log(socket.id, ":", data)
    try {
      db.query("INSERT INTO msglog (cnum, sender, message) VALUES (?,?,?)", [data.cnum, data.sender, data.message], (err, result) => {
        if (err) {
          console.error(err);
        }
      })
    } catch (e) {
      return;
    }
    msg = {
      Sender: data.sender,
      Message: data.message
    }

    // 같은 채팅방에 전송
    io.to(data.cnum).emit('chat_message', msg);
  });

  // 구매 버튼 누를 시
  socket.on('purchase', (cnum) => {
    console.log("purchase", cnum);

    var Seller;
    var Buyer;
    var BoardNum;
    var price;
    var ok;

    // 구매자 판매자 가져오기
    db.query("SELECT * FROM chatroom WHERE Cno=?", [cnum], (_err, result) => {
      if (result.length === 0) {
        console.log("Chatroom not found");
        return;
      }

      Seller = result[0].Rid;
      Buyer = result[0].Sid;
      BoardNum = result[0].Bnum;

      // 상품 가격 가져오기
      db.query("SELECT * FROM board WHERE Bno=?", [BoardNum], (_err, result) => {
        if (result.length === 0) {
          console.log("Board not found");
          return;
        }

        if (result[0].Trade == '거래완료') {
          socket.emit("alreadyComplete");
          return;
        }

        price = result[0].Price;

        // 구매자 돈 확인 및 차감
        db.query("SELECT Money FROM usr WHERE Uid=?", [Buyer], (_err, result) => {
          if (result[0].Money >= price) {
            db.query("UPDATE usr SET Money=Money-? WHERE Uid=?", [price, Buyer], () => {
              ok = true;

              // 판매자 돈 +
              db.query("UPDATE usr SET Money=Money+? WHERE Uid=?", [price, Seller]);

              // 채팅방 삭제?

              // 게시글 구매자 및 거래완료로 바꾸기
              db.query("UPDATE board SET Trade='거래완료', Buyer=? WHERE Bno=?", [Buyer, BoardNum], () => {
                // 거래 완료 이벤트 전송
                socket.emit('tradeCompleted');
              });
            });
          } else {
            socket.emit("needmoney");
            console.log("Not enough money");
          }
        });
      });
    });
  });
});


/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
